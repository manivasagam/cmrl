<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#cccccc"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/train_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="Train Name"
        />
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:layout_marginLeft="30dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Description: "/>
        <TextView
            android:id="@+id/train_descp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/train_name"
            android:textColor="#000"
            android:textSize="15dp"

            android:text="Train descp"></TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:layout_marginLeft="30dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Fare: "/>
        <TextView
            android:id="@+id/fare_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/train_name"
            android:textColor="#000"
            android:textSize="15dp"

            android:text="fare"></TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:layout_marginLeft="30dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Approx. Time: "/>
        <TextView
            android:id="@+id/approx_time_interval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/train_name"
            android:textColor="#000"
            android:textSize="15dp"

            android:text="time"></TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:layout_marginLeft="30dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Arrival Time: "/>
        <TextView
            android:id="@+id/arrival_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/train_name"
            android:textColor="#000"
            android:textSize="15dp"

            android:text="Time"></TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:layout_marginLeft="30dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Arrpox. Distance: "/>
        <TextView
            android:id="@+id/approx_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/train_name"
            android:textColor="#000"
            android:textSize="15dp"
            android:text="distance"></TextView>

    </LinearLayout>

</LinearLayout>